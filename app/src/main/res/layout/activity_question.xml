<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comuiappcenter.facebook.m.legacy.QuestionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/innerRelativeLayout_question">

        <comuiappcenter.facebook.m.legacy.defaultTextBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_box"
            app:minLines="1"
            app:hint="제목을 입력해 주세요"
            android:layout_below="@+id/title_box"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/innerRelativeLayout_question"
        android:layout_alignParentStart="true"
        android:id="@+id/relative_layout_middle_question">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:id="@+id/button_category"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <comuiappcenter.facebook.m.legacy.defaultTextBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/body_box"
        app:minLines="4"
        app:hint="질문을 입력해주세요"
        android:layout_below="@+id/relative_layout_middle_question"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_box"
        android:layout_alignParentStart="true"
        android:id="@+id/relative_layout_bottom_question">

    </RelativeLayout>

    <comuiappcenter.facebook.m.legacy.defaultButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accept_button"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />

</RelativeLayout>
