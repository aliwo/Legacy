<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comuiappcenter.facebook.m.legacy.QuestionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/innerRelativeLayout_question"
        >

        <comuiappcenter.facebook.m.legacy.defaultTextBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_box"
            app:minLines="1"
            app:hint="제목을 입력해 주세요"
            />
    </RelativeLayout>

    <comuiappcenter.facebook.m.legacy.defaultButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accept_button"
        android:onClick="onClick"
        android:layout_centerVertical="true"
         />

    <comuiappcenter.facebook.m.legacy.defaultTextBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/body_box"
        app:minLines="4"
        app:hint="질문을 입력해주세요"
        android:layout_above="@+id/accept_button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>
