<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="제목"
        android:id="@+id/title_answer_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/title_answer_list"
        android:layout_alignParentStart="true"
        android:src="@drawable/yellow_stroke" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본문"
        android:id="@+id/body_answer_list"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer_list_thumbs_up_button"
        android:src="@drawable/ic_info_black_24dp"
        android:layout_alignBottom="@+id/title_answer_list"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer_list_modify"
        android:layout_alignBottom="@+id/title_answer_list"
        android:layout_toStartOf="@+id/answer_list_thumbs_up_button"
        android:src="@drawable/ic_menu_manage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성자"
        android:id="@+id/author_answer_list"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toStartOf="@+id/answer_list_modify" />

</RelativeLayout>