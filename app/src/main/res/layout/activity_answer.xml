<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comuiappcenter.facebook.m.legacy.AnswerActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/upper_relativelayout_answer_activity"
        >
        <comuiappcenter.facebook.m.legacy.defaultTextBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:minLines="1"
            android:id="@+id/title_answer_activity"
            android:paddingBottom="5dp">
        </comuiappcenter.facebook.m.legacy.defaultTextBox>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/upper_relativelayout_answer_activity"
        android:layout_height="100dp"
        android:id="@+id/body_box_relative_layout"
        >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/scrollview_answer_activity"
            android:layout_alignParentStart="true" >

            <comuiappcenter.facebook.m.legacy.defaultTextBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/body_answer_activity"
                app:minLines="2"
                />
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/body_box_relative_layout"
        android:layout_alignParentStart="true"
        android:id="@+id/relative_answer_title">

        <comuiappcenter.facebook.m.legacy.defaultTextBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:minLines="1"
            android:id="@+id/title_answer_textview"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/relative_answer_title"
        android:layout_alignParentStart="true"
        android:id="@+id/relative_answer_body">

        <comuiappcenter.facebook.m.legacy.defaultTextBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/answer_text_body"
            app:minLines="3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accept_button_answer_activity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/app_logo" />


</RelativeLayout>
